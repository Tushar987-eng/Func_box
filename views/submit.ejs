<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Func_Box</h1>
    <p class="secret-text">Don't keep your secrets, save them under a bucket name!</p>

    <form action="/submit" method="POST">

      <div class="form-group">
        <h1>Bucket Name</h1>
        <input type="text" class="form-control text-center" name="bucket" id="bucket">
        <h1>Input Text</h1>
        <input type="text" class="form-control text-center" name="secret" placeholder="What's your secret?">
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>


  </div>
</div>
